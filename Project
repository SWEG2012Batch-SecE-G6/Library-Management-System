void sortDsPubYear(){
    system("cls");
    cout<<endl;
    for(int k=0; k<n; k++){
        for(int j=0; j<i-k-1; j++){
            if(book[j].pubYear<book[j+1].pubYear){
                temp = book[j];
                book[j]=book[j+1];
                book[j+1]=temp;
            }
        }
    }
    display();
    cout<<"\t";
    system("pause");
    system("cls");
    display_book_page();
}
void sortAsName(){
    system("cls");
    cout<<endl;
    for(int k=0; k<i; k++){
        for(int j=0; j<i-k-1; j++){
            if(strcmp(book[j].bookName,book[j+1].bookName)>0){
                temp = book[j];
                book[j]=book[j+1];
                book[j+1]=temp;
            }
        }
    }
    display();
    cout<<"\t";
    system("pause");
    system("cls");
    display_book_page();
}
